{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## ğŸ“ Documentation",
      "labels": ["documentation"]
    },
    {
      "title": "## ğŸ§° Maintenance",
      "labels": ["chore", "maintenance"]
    },
    {
      "title": "## ğŸ”§ Refactoring",
      "labels": ["refactor"]
    },
    {
      "title": "## âš¡ Performance",
      "labels": ["performance"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test"]
    },
    {
      "title": "## ğŸ› ï¸ Build & CI",
      "labels": ["build", "ci"]
    }
  ],
  "ignore_labels": [
    "duplicate",
    "invalid",
    "question",
    "wontfix"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "${{CHANGELOG}}\n\n## ğŸ§© Dependencies\n\n${{UNCATEGORIZED}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes in this release",
  "label_extractor": [
    {
      "pattern": "(.) (.+)",
      "target": "$1",
      "flags": "gu"
    }
  ],
  "duplicate_filter": {
    "pattern": "\\[GH-(\\d+)\\]",
    "on_property": "title",
    "method": "match"
  },
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
      "target": "- $4\n  - $6"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 200,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "Owner/main"
  ],
  "tag_resolver": {
    "method": "semver",
    "filter": {
      "pattern": "v(.+)",
      "flags": "gu"
    }
  }
}
